{
    "name": "Muse Extension",
    "version": "1.0",
    "description": "Extension to browse the web using the Muse headset",
    "permissions": ["storage", "input", "activeTab", "*://*/*"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }, 
    "browser_action": {
      "default_title": "Inject!"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
      ],
    "manifest_version": 2
  }
  